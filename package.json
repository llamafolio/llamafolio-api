{
  "name": "llamafolio-api",
  "version": "0.0.1",
  "description": "LlamaFolio API",
  "type": "module",
  "scripts": {
    "adapter": "tsx scripts/run-adapter.ts",
    "build-adapters": "tsx scripts/build-adapters.ts",
    "build": "pnpm build-adapters",
    "dev": "sls offline",
    "deploy:dev": "pnpm build && sls deploy --stage dev",
    "deploy:prod": "pnpm build && NODE_ENV='production' sls deploy --stage prod",
    "create-adapter": "tsx scripts/create-adapter.ts",
    "delete-adapter": "tsx scripts/delete-adapter.ts",
    "provider-bench": "tsx scripts/provider-bench.ts",
    "adapter-balances": "tsx scripts/run-adapter-balances.ts",
    "update-balances": "tsx scripts/update-balances.ts",
    "migrate": "node-pg-migrate",
    "revalidate-contracts": "tsx scripts/revalidate-contracts.ts",
    "revalidate-contracts-rec": "tsx scripts/revalidate-contracts-rec.ts",
    "find-user": "tsx scripts/find-user.ts",
    "insert-llamafolio-tokens": "tsx scripts/insert-llamafolio-tokens.ts",
    "update-tokens": "tsx scripts/update-tokens.ts",
    "update-yields": "tsx scripts/update-yields.ts",
    "update-protocols": "tsx scripts/update-protocols.ts",
    "lint": "eslint --fix . --ext js,cjs,mjs,ts,d.ts,json,md --cache",
    "format": "prettier --write '**/*.{md,json,js,cjs,mjs,ts,d.ts,sh}' --ignore-path='./.eslintignore' --ignore-unknown --cache",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "ts-node": "tsx",
    "clean": "rm -rf dist .esbuild .serverless"
  },
  "keywords": [],
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.370.0",
    "@aws-sdk/client-s3": "^3.374.0",
    "@clickhouse/client": "^0.2.0",
    "@llamafolio/tokens": "^0.1.85",
    "dotenv": "^16.3.1",
    "graphql": "^16.7.1",
    "graphql-request": "^6.1.0",
    "lodash": "^4.17.21",
    "pg": "^8.11.1",
    "pg-format": "^1.0.4",
    "uuid": "^9.0.0",
    "viem": "^1.4.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/eslint": "^8.44.0",
    "@types/node": "^20.4.4",
    "@types/pg": "^8.10.2",
    "@types/pg-format": "^1.0.2",
    "@types/prettier": "^2.7.3",
    "@types/serverless": "^3.12.13",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vitest/ui": "^0.33.0",
    "abitype": "^0.9.5",
    "esbuild-analyzer": "^0.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-markdownlint": "^0.4.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "node-pg-migrate": "^6.2.2",
    "prettier": "^3.0.0",
    "prettier-plugin-sh": "^0.13.1",
    "prettier-plugin-sql": "^0.15.1",
    "serverless": "^3.33.0",
    "serverless-esbuild": "^1.46.0",
    "serverless-offline": "^12.0.4",
    "serverless-prune-plugin": "^2.0.2",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.33.0",
    "yaml": "^2.3.1"
  },
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.0.0",
    "yarn": "------>PLEASE USE PNPM<------",
    "npm": "------>PLEASE USE PNPM<------"
  }
}
