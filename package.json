{
  "name": "llamafolio-api",
  "version": "0.0.1",
  "description": "LlamaFolio API",
  "scripts": {
    "adapter": "ts-node -T scripts/run-adapter.ts",
    "create-adapter": "ts-node -T scripts/create-adapter.ts",
    "adapter-balances": "ts-node -T scripts/run-adapter-balances.ts",
    "update-balances": "ts-node -T scripts/update-balances.ts",
    "revalidate-contracts": "ts-node -T scripts/revalidate-contracts.ts",
    "find-user": "ts-node -T scripts/find-user.ts",
    "insert-tokens": "ts-node -T scripts/insert-tokens.ts",
    "update-tokens": "ts-node -T scripts/update-tokens.ts",
    "update-yields": "ts-node -T scripts/update-yields.ts",
    "lint": "eslint --ignore-path .gitignore --ignore-path .eslintignore \"**/*.{js,ts}\" --max-warnings=0",
    "format": "prettier --ignore-path .gitignore --ignore-path .prettierignore '**/*.{md,json,js,ts}' --write",
    "postinstall": "npm run update-llamafolio-tokens && npm run update-llamafolio-labels",
    "test": "jest",
    "tscheck": "tsc -p tsconfig.json --noEmit --skipLibCheck",
    "update-llamafolio-tokens": "cd llamafolio-tokens && git checkout master && git pull && rm -rf build && npm run build",
    "update-llamafolio-labels": "cd llamafolio-labels && git checkout main && git pull && rm -rf build && npm run build"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "@defillama/sdk": "^3.0.8",
    "@llamafolio/labels": "file:./llamafolio-labels",
    "@llamafolio/tokens": "file:./llamafolio-tokens",
    "aws-sdk": "^2.1189.0",
    "dotenv": "^16.0.1",
    "ethers": "^5.6.9",
    "graphql-request": "^5.0.0",
    "ioredis": "^5.2.4",
    "node-fetch": "^2.6.2",
    "pg": "^8.7.3",
    "pg-format": "^1.0.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.101",
    "@types/jest": "^28.1.6",
    "@types/node-fetch": "^2.6.2",
    "@types/pg": "^8.6.5",
    "@types/pg-format": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^28.1.3",
    "millify": "^5.0.1",
    "prettier": "^2.8.1",
    "serverless": "^3.19.0",
    "serverless-esbuild": "^1.31.0",
    "serverless-offline": "^10.0.2",
    "serverless-prune-plugin": "^2.0.1",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}
