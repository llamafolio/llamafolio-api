{
  "compilerOptions": {
    "target": "ESNext",
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "resolveJsonModule": true,
    "noEmit": false,
    "allowJs": false,
    "noImplicitThis": false,
    "noErrorTruncation": true,
    "noUnusedLocals": false,
    "types": ["node"],
    "noUnusedParameters": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@*": ["./src/*"],
      "@environment": ["./environment.ts"]
    }
  },
  "include": ["src", "scripts", "test", "bench", "*.ts", "*.js", "*.cjs", ".*.cjs","*.cts", "*.json"],
  "exclude": [".esbuild", "node_modules", "coverage", "dist"]
}
