{
  "name": "llamafolio-api",
  "version": "0.0.1",
  "description": "LlamaFolio API",
  "type": "module",
  "scripts": {
    "adapter": "tsx scripts/run-adapter.ts",
    "build-adapters": "tsx scripts/build-adapters.ts",
    "build": "pnpm build-adapters",
    "dev": "sls offline",
    "deploy:dev": "pnpm build && sls deploy --stage dev",
    "deploy:prod": "pnpm build && sls deploy --stage prod",
    "create-adapter": "tsx scripts/create-adapter.ts",
    "delete-adapter": "tsx scripts/delete-adapter.ts",
    "provider-bench": "tsx scripts/provider-bench.ts",
    "adapter-balances": "tsx scripts/run-adapter-balances.ts",
    "update-balances": "tsx scripts/update-balances.ts",
    "migrate": "node-pg-migrate",
    "revalidate-contracts": "tsx scripts/revalidate-contracts.ts",
    "revalidate-contracts-rec": "tsx scripts/revalidate-contracts-rec.ts",
    "find-user": "tsx scripts/find-user.ts",
    "insert-llamafolio-tokens": "tsx scripts/insert-llamafolio-tokens.ts",
    "update-tokens": "tsx scripts/update-tokens.ts",
    "update-yields": "tsx scripts/update-yields.ts",
    "update-protocols": "tsx scripts/update-protocols.ts",
    "lint": "eslint --fix . --ext js,cjs,mjs,ts,d.ts,json,md --cache",
    "format": "prettier --write . --ignore-path='./.eslintignore' --ignore-unknown --cache",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "predev-test": "pnpm clean",
    "dev-test": "sls offline --httpPort 3034",
    "test": "vitest",
    "test:ci": "/bin/bash ./scripts/test.sh",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "ts-node": "tsx",
    "clean": "rm -rf dist .esbuild .serverless",
    "preinstall": "npx only-allow pnpm"
  },
  "keywords": [],
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.322.0",
    "@defillama/sdk": "^3.0.8",
    "@llamafolio/tokens": "^0.1.60",
    "dotenv": "^16.0.1",
    "ethers": "^5.7.2",
    "graphql": "^16.6.0",
    "graphql-request": "^5.1.0",
    "jsbi": "^3.2.5",
    "lodash": "^4.17.21",
    "pg": "^8.7.3",
    "pg-format": "^1.0.4",
    "uuid": "^9.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.114",
    "@types/eslint": "^8.37.0",
    "@types/node": "^18.16.3",
    "@types/pg": "^8.6.5",
    "@types/pg-format": "^1.0.2",
    "@types/prettier": "^2.7.2",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "@vitest/coverage-istanbul": "^0.30.1",
    "@vitest/ui": "^0.30.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-markdownlint": "^0.4.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "node-pg-migrate": "^6.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-sh": "^0.12.8",
    "prettier-plugin-sql": "^0.14.0",
    "serverless": "^3.30.1",
    "serverless-esbuild": "^1.43.1",
    "serverless-offline": "^12.0.4",
    "serverless-prune-plugin": "^2.0.2",
    "simple-git-hooks": "^2.8.1",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.30.1",
    "vitest-github-actions-reporter": "^0.10.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint && pnpm format && pnpm build"
  },
  "packageManager": ">=pnpm@8.0.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.0.0",
    "yarn": "------>PLEASE USE PNPM<------",
    "npm": "------>PLEASE USE PNPM<------"
  }
}
